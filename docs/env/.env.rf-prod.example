# RF production server (main app + DB)

NODE_ENV=production
PORT=3000

# Public app domain in RF
VITE_API_URL=https://your-rf-domain.ru/api
CORS_ORIGIN=https://your-rf-domain.ru,https://www.your-rf-domain.ru,capacitor://localhost,http://localhost

# PostgreSQL on RF server
DATABASE_URL=postgresql://stroova:CHANGE_ME_DB_PASSWORD@localhost:5432/stroova

# Optional telegram bot
TELEGRAM_BOT_TOKEN=
APP_URL=https://your-rf-domain.ru

# Internal DE -> RF dictionary sync
INTERNAL_SYNC_SOURCE=de-ai-worker
INTERNAL_SYNC_SHARED_SECRET=CHANGE_ME_LONG_RANDOM_SECRET
INTERNAL_SYNC_REQUIRE_SIGNATURE=true
INTERNAL_SYNC_ALLOWED_IPS=203.0.113.10
INTERNAL_SYNC_REQUIRE_MTLS=false
INTERNAL_SYNC_ALLOWED_SKEW_SECONDS=300
INTERNAL_SYNC_WORKER_POLL_MS=3000

# AI settings for RF admin panel (optional)
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
