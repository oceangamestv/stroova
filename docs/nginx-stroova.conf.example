# Пример конфига Nginx для STroova.
# Скопировать на сервер: /etc/nginx/sites-available/stroova
# После правок: sudo nginx -t && sudo systemctl reload nginx
#
# Боевой сервер: 147.45.196.155. Когда привяжешь домен — добавь его в server_name
# и получи сертификат: sudo certbot --nginx -d 147.45.196.155 -d твой-домен.ru
#
# CORS: список origin должен совпадать с CORS_ORIGIN в .env приложения.
map $http_origin $api_cors_origin {
    default "";
    "~^https://stroova\.ru$" $http_origin;
    "~^https://www\.stroova\.ru$" $http_origin;
    "~^https://147\.45\.196\.155$" $http_origin;
    "~^capacitor://localhost$" $http_origin;
    "~^http://localhost(:[0-9]+)?$" $http_origin;
}

server {
    server_name 147.45.196.155 vm1147925.cloud.nuxt.network stroova.ru www.stroova.ru;
    root /root/stroova/dist;
    index index.html;

    # CORS для озвучки в мобильном приложении (загрузка WAV с сервера)
    location /audio/ {
        add_header Access-Control-Allow-Origin *;
    }

    location / {
        try_files $uri $uri/ /index.html;
    }

    # API: preflight (OPTIONS) отвечаем сразу с CORS, остальное — в Node
    location /api {
        if ($request_method = OPTIONS) {
            add_header Access-Control-Allow-Origin $api_cors_origin;
            add_header Access-Control-Allow-Methods "GET, POST, PATCH, OPTIONS";
            add_header Access-Control-Allow-Headers "Content-Type, Authorization";
            add_header Access-Control-Max-Age 86400;
            return 204;
        }
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_pass_request_headers on;
    }

    listen 80;
}

# После certbot появится блок listen 443 ssl с путями к сертификатам, например:
